<!DOCTYPE html>
<html>

<head>
    <% include ../partials/head %>
</head>

<body>
    <% include ../partials/nav %>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="contact contact-show">
                    <div class="contact-menu">
                        <div class="contact-text">
                            <h2>
                                <%= contact.name%>
                            </h2>
                            <div>
                                <span>
                                    <%= contact.email %>
                                </span>
                            </div>
                            <div>
                                <span>
                                    <%= contact.phone %>
                                </span>
                            </div>
                        </div>
                        <div class="contact-button">
                            <a class="btn btn-default" href="/contacts">이전</a>
                            <a class="btn btn-default" href="/contacts/<%= contact._id %>/edit">수정</a>
                            <form action="/contacts/<%= contact._id %>?_method=delete" method="post">
                                <a class="btn btn-default" href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">삭제</a>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>

</body>

</html>